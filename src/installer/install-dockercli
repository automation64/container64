#
# Imports
#

# Environment Definition. See docs/base-environment.md for details
export CNT64_BASHLIB64="${CNT64_BASHLIB64:-/opt/bl64/bashlib64.bash}"
export CNT64_DEBUG="${CNT64_DEBUG:-}"

# shellcheck source=SCRIPTDIR/../../lib/bashlib64.bash
source "$CNT64_BASHLIB64" || { echo "Error: unable to load bashlib64 (${CNT64_BASHLIB64})" && exit 1; }

#
# Globals
#

#
# Functions
#

function cnt64_docker_install_centos() {
  local repository_name='docker-ce'
  # shellcheck disable=SC2016
  local repository_url='https://download.docker.com/linux/centos/$releasever/$basearch/stable'
  local repository_key='https://download.docker.com/linux/centos/gpg'
  local packages='docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin'

  bl64_msg_show_task 'Add YUM package repository'
  bl64_pkg_repository_add "$repository_name" "$repository_url" "$repository_key" ||
    return $?

  bl64_msg_show_task 'deploy packages'
  # shellcheck disable=SC2086
  bl64_pkg_deploy $packages
}

#######################################
# Install application packages
#
# Arguments:
#   None. Parameters are imported from Globals
# Outputs:
#   Package installer progress and errors
# Returns:
#   0: package installed ok
#   >0: unable to install package
#######################################
function cnt64_docker_install() {
  bl64_dbg_app_show_function
  if bl64_os_match "${BL64_OS_OL}"; then
    cnt64_docker_install_centos
  fi
  # shellcheck disable=SC2181
  (($? != 0)) && return 1

  bl64_msg_show_task 'cleanup temporary files'
  bl64_fs_cleanup_full
  return 0
}

#######################################
# Initialize environment
#
# Arguments:
#   None
# Outputs:
#   Initializacion progress messages
# Returns:
#   0: initialization ok
#   >: failed to initialize
#######################################
function cnt64_docker_initialize() {
  bl64_dbg_app_show_function
  bl64_os_check_version "${BL64_OS_OL}" &&
    bl64_check_privilege_root &&
    bl64_pkg_setup
}

#
# Main
#

declare cnt64_docker_installer_description='Install application: Docker CLI'
declare -i cnt64_docker_status=0

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start "$cnt64_docker_installer_description"

[[ -n "$CNT64_DEBUG" ]] && bl64_dbg_lib_enable
cnt64_docker_initialize &&
  cnt64_docker_install
cnt64_docker_status=$?

bl64_msg_show_batch_finish "$cnt64_docker_status" "$cnt64_docker_installer_description"
exit $cnt64_docker_status
