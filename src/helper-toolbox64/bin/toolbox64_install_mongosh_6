#!/usr/bin/env bash
source "/toolbox64.env" &&
  source "${TOOLBOX64_LIB}/bashlib64.bash" || exit 1

#
# Variables
#

declare repository_name='mongodb-org-6.0'
declare repository_url='https://repo.mongodb.org/yum/redhat/$releasever/mongodb-org/6.0/x86_64/'
declare repository_key='https://www.mongodb.org/static/pgp/server-6.0.asc'
declare packages='mongodb-org-tools mongodb-mongosh'
declare process='Install MongoDB Shell 6 CLI'
declare -i status=0

#
# Main
#

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start "$process"

bl64_pkg_repository_add "$repository_name" "$repository_url" "$repository_key"
bl64_pkg_deploy $packages

bl64_msg_show_batch_finish "$status" "$process"
exit $status
