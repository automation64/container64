# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=/opt/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-rxtx.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-api.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-vcs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-xsv.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-bsh.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1
# shellcheck source-path=bin
source ./bin/dev-env-git || exit 1

function my_create() {
  bl64_dbg_app_show_function
  bl64_msg_show_task "Initialize local git repository (${DEV_PATH_ROOT})"
  bl64_vcs_run_git init -b "$DEV_GIT_BRANCH_MAIN" &&
    bl64_msg_show_task "Add upstream (${DEV_GIT_REMOTE_UPSTREAM_URL})" &&
    bl64_vcs_run_git remote add "$DEV_GIT_REMOTE_UPSTREAM" "$DEV_GIT_REMOTE_UPSTREAM_URL" &&
    bl64_msg_show_task "Prepare and push first commit (${DEV_GIT_BRANCH_MAIN})" &&
    bl64_vcs_run_git add . &&
    bl64_vcs_run_git commit -m 'dev: create repo' &&
    bl64_vcs_run_git push upstream "$DEV_GIT_BRANCH_MAIN"
}

function my_initialize() {
  bl64_dbg_app_show_function
  bl64_check_export 'DEV_GIT_REMOTE_UPSTREAM_URL' &&
    bl64_msg_show_about &&
    bl64_msg_show_setup "$BL64_VAR_DEFAULT" \
      'DEV_GIT_BRANCH_MAIN' \
      'DEV_GIT_REMOTE_UPSTREAM' \
      'DEV_GIT_REMOTE_UPSTREAM_URL' \
      'DEV_GIT_REMOTE_UPSTREAM_ENABLED'
}

bl64_lib_script_version_set '1.0.1'
bl64_msg_help_about_set 'Create local git repository and push to remote upstream'
bl64_msg_set_format "$DEV_VERBOSE" && bl64_msg_all_enable_verbose && bl64_dbg_set_level "$DEV_CICD_DEBUG" && my_initialize || exit $?

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_create
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
