#!/usr/bin/env bash

# shellcheck source=SCRIPTDIR/devcnt-set
source bin/devcnt-set || exit $?
# shellcheck source=SCRIPTDIR/../lib/bashlib64.bash
source "$DEVCNT_LIB_BASHLIB64"

bl64_msg_show_task "Build app (${DEVCNT_BUILD_DEV})"
# shellcheck disable=SC2154
bl64_fs_merge_files \
  '0755' \
  "$BL64_VAR_DEFAULT" \
  "$BL64_VAR_DEFAULT" \
  "$BL64_VAR_ON" \
  "$DEVCNT_BUILD_DEV" \
  "$DEVCNT_SRC/cntbuild/${DEVCNT_APP_NAME}-header.bash" \
  "$DEVCNT_LIB_BASHLIB64" \
  "$DEVCNT_SRC/cntbuild/${DEVCNT_APP_NAME}-env.bash" \
  "$DEVCNT_SRC/cntbuild/${DEVCNT_APP_NAME}-functions.bash" \
  "$DEVCNT_SRC/cntbuild/${DEVCNT_APP_NAME}-main.bash"
