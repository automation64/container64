#!/usr/bin/env bash
#
# Lint shell source code
#
# * Use to lint shell source code
# * Check is done using shellcheck
# * TestManSH is used to manage linting environment
# * Template Version: v1.1.0
#

# shellcheck source=SCRIPTDIR/dev-set
source ./bin/dev-set || exit 1

"$DEVCNT_CICD_BUILD" &&
  "$DEVCNT_CICD_TESTMANSH" -t -o -c "${DEVCNT_NAME_BUILD}/${DEVCNT_BUILD_NAME}" &&
  "$DEVCNT_CICD_TESTMANSH" -t -o -c "${DEVCNT_NAME_SRC}/${DEVCNT_BUILD_NAME_HELPERS}" &&
  "$DEVCNT_CICD_TESTMANSH" -t -o -c "${DEVCNT_NAME_SRC}/${DEVCNT_BUILD_NAME_TOOLBOX}"
