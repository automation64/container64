#
# Imports
#

# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source=bin/dev-env-installer64
source ./bin/dev-env-installer64 || exit 1
# shellcheck source=bin/dev-env-bashlib64
source ./bin/dev-env-bashlib64 || exit 1

#
# Globals
#

# Lib / BashLib64 / Installer64 parameters
export INST64_BASHLIB64_TARGET="$DEV_LIB_BASHLIB64_TARGET"

#
# Main
#

[[ -n "$DEV_CICD_DEBUG" ]] && set -x
[[ ! -d "$DEV_LIB_INSTALLER64_TARGET" ]] &&
    echo 'dev-lib-installer64: Error: Installer64 not found, please run ./bin/dev-lib-installer64 and try again' &&
    exit 1

echo 'dev-lib-bashlib64: Task: remove BashLib64 older versions'
[[ -d "$DEV_LIB_BASHLIB64_TARGET" ]] && rm -Rf "$DEV_LIB_BASHLIB64_TARGET"

echo 'dev-lib-bashlib64: Task: download Installer64'
"${DEV_LIB_INSTALLER64_TARGET}/install-bashlib64" &&
    rm -f \
        "${DEV_LIB_BASHLIB64_TARGET}/bashlib64.bash" \
        "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-opt.bash"
