#
# Module parameters
#
# * Use .dev.env file to override values
#

# shellcheck disable=SC2154
{
  # Env / GIT / Main branch name
  export DEV_GIT_BRANCH_MAIN="${DEV_GIT_BRANCH_MAIN:-main}"
  # Env / GIT / Release branch name
  export DEV_GIT_BRANCH_RELEASE="${DEV_GIT_BRANCH_RELEASE:-release}"
  # Env / GIT / Feature branch name
  export DEV_GIT_BRANCH_FEATURE="${DEV_GIT_BRANCH_FEATURE:-feature}"
  # Env / GIT / Origin remote name
  export DEV_GIT_REMOTE_ORIGIN="${DEV_GIT_REMOTE_ORIGIN:-origin}"
  # Env / GIT / Use upstream repository? (ON|OFF)
  export DEV_GIT_REMOTE_UPSTREAM_ENABLED="${DEV_GIT_REMOTE_UPSTREAM_ENABLED:-ON}"
  # Env / GIT / Upstream remote name
  export DEV_GIT_REMOTE_UPSTREAM="${DEV_GIT_REMOTE_UPSTREAM:-upstream}"
  # Env / GIT / Upstream URL
  export DEV_GIT_REMOTE_UPSTREAM_URL="${DEV_GIT_REMOTE_UPSTREAM_URL:-}"
}

#
# Locals
#
# * Use .local.env file or CICD variables to override values
#

# shellcheck disable=SC2154
{
  # Lib / RSync / Command
  export DEV_LIB_RSYNC_BIN="${DEV_LIB_RSYNC_BIN:-/usr/bin/rsync}"
}

#
# Internal variables
#
# * Shared internal variables for module tasks
#

# shellcheck disable=SC2154
{
  # Env / GIT / Module environment definition version
  export DEV_ENV_GIT_VERSION='1.1.0'
}
