#
# Imports
#

# shellcheck source=bin/dev-set
source ./bin/dev-set || exit 1
# shellcheck source=lib/bl64/bashlib64.bash
source "${DEV_CICD_BASHLIB64}/bashlib64.bash" || exit 1

#
# Functions
#

function dev_build_app() {
  bl64_dbg_app_show_function
  bl64_msg_show_task "Build app (${DEV_BUILD_NAME})"
  bl64_fs_merge_files \
    '0755' \
    "$BL64_VAR_DEFAULT" \
    "$BL64_VAR_DEFAULT" \
    "$BL64_VAR_ON" \
    "$DEV_BUILD_TARGET" \
    "${DEV_BUILD_SOURCE}/header.bash" \
    "${DEV_CICD_BASHLIB64}/bashlib64.bash" \
    "${DEV_BUILD_SOURCE}/env.bash" \
    "${DEV_BUILD_SOURCE}/functions.bash" \
    "${DEV_BUILD_SOURCE}/main.bash"
}
#
# Main
#

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable

bl64_check_export 'DEV_BUILD_SOURCE' &&
  bl64_check_export 'DEV_BUILD_TARGET' &&
  bl64_check_export 'DEV_BUILD_NAME' &&
  bl64_check_directory "$DEV_BUILD_SOURCE" ||
  exit $?

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start 'build-app'
dev_build_app
bl64_msg_show_batch_finish $? 'build-app'
