#!/usr/bin/env bash

# shellcheck source=SCRIPTDIR/dev-set
source bin/dev-set || exit $?
# shellcheck source=SCRIPTDIR/../lib/bashlib64.bash
source "$DEVCNT_CICD_BASHLIB64"

#
# Functions
#

function dev_cnt_publish() {
  local build_only="$1"
  local image_list="$2"
  local message="$3"
  local container_name=''

  bl64_msg_show_phase "$message"
  # shellcheck disable=SC2086
  for container_name in $image_list; do
    bl64_msg_show_task "Build container image: ${container_name}"
    ./cntbuild -b -c "$container_name" || return $?
    if [[ "$build_only" == "$BL64_VAR_OFF" ]]; then
      bl64_msg_show_task "Publish container image: ${container_name}" &&
        ./cntbuild -u -c "$container_name" ||
        return $?
    fi
  done
}

#
# Main
#

declare dev_cnt_build_target="${1:-all}"
declare dev_cnt_build_only="${2:-${BL64_VAR_ON}}"

bl64_check_export 'DEVCNT_IMAGES_TOOLBOX_L0' &&
  bl64_check_export 'DEVCNT_IMAGES_BASH_TEST_L0' &&
  bl64_check_export 'DEVCNT_IMAGES_BASH_TEST_L1' &&
  bl64_check_export 'DEVCNT_IMAGES_ANSIBLE_L1' &&
  bl64_check_export 'DEVCNT_IMAGES_SHELL_LINT_L1' &&
  bl64_check_export 'DEVCNT_IMAGES_TOOLBOX_L1' &&
  bl64_check_export 'DEVCNT_IMAGES_TOOLBOX_L2' &&
  bl64_check_export 'DEVCNT_IMAGES_BASH_TEST_L2' &&
  bl64_check_export 'DEVCNT_IMAGES_BASH_TEST_L3' &&
  bl64_check_export 'DEVCNT_IMAGES_TERRAFORM_TEST_L3' ||
  exit $?

case "$dev_cnt_build_target" in
'all')
  dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_TOOLBOX_L0" 'Publish toolbox containers - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_BASH_TEST_L0" 'Publish bash-test containers - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_BASH_TEST_L1" 'Publish bash-test containers - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_ANSIBLE_L1" 'Publish ansible-test containers - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_SHELL_LINT_L1" 'Publish shell-lint - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_TOOLBOX_L1" 'Publish toolbox containers - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_TOOLBOX_L2" 'Publish toolbox containers - level 2' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_BASH_TEST_L2" 'Publish bash-test containers - level 2' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_BASH_TEST_L3" 'Publish bash-test containers - level 3' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_TERRAFORM_TEST_L3" 'Publish terraform-test containers - level 3'
  ;;
'toolbox')
  dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_TOOLBOX_L0" 'Publish toolbox containers - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_TOOLBOX_L1" 'Publish toolbox containers - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_TOOLBOX_L2" 'Publish toolbox containers - level 2'
  ;;
'bash_test')
  dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_BASH_TEST_L0" 'Publish bash-test containers - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_BASH_TEST_L1" 'Publish bash-test containers - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_BASH_TEST_L2" 'Publish bash-test containers - level 2' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_BASH_TEST_L3" 'Publish bash-test containers - level 3'
  ;;
'ansible')
  dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_BASH_TEST_L0" 'Publish bash-test containers - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_ANSIBLE_L1" 'Publish ansible-test containers - level 1'
  ;;
'shell_lint')
  dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_BASH_TEST_L0" 'Publish bash-test containers - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_SHELL_LINT_L1" 'Publish shell-lint - level 1'
  ;;
'terraform_test')
  dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_TOOLBOX_L0" 'Publish toolbox containers - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_TOOLBOX_L1" 'Publish toolbox containers - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_TOOLBOX_L2" 'Publish toolbox containers - level 2' &&
    dev_cnt_publish "$dev_cnt_build_only" "$DEVCNT_IMAGES_TERRAFORM_TEST_L3" 'Publish terraform-test containers - level 3'
  ;;
*) bl64_check_alert_parameter_invalid 'build_target' 'not one of: [all|toolbox|bash|ansible|shell|terraform]' ;;
esac
