#!/usr/bin/env bash

# shellcheck source=SCRIPTDIR/dev-set
source bin/dev-set || exit $?
# shellcheck source=SCRIPTDIR/../lib/bashlib64.bash
source "$DEVCNT_CICD_BASHLIB64"

#
# Functions
#

function dev_cnt_publish() {
  local build_only="$1"
  local delete_first="$2"
  local image_list="$3"
  local message="$4"
  local container_name=''

  bl64_msg_show_phase "$message"
  # shellcheck disable=SC2086
  for container_name in $image_list; do
    ./cntbuild -b -c "$container_name" || return $?
    if [[ "$build_only" == "$BL64_VAR_OFF" ]]; then
      if [[ "$delete_first" == "$BL64_VAR_ON" ]]; then
        ./cntbuild -x -c "$container_name"
      fi
      ./cntbuild -u -c "$container_name" ||
        return $?
    fi
  done
}

#
# Main
#

declare dev_cnt_build_target="${1:-all}"
declare dev_cnt_build_only="${2:-${BL64_VAR_ON}}"
declare dev_cnt_delete_first="${3:-${BL64_VAR_OFF}}"

bl64_check_export 'DEVCNT_IMAGES_ANSIBLE_L1' &&
  bl64_check_export 'DEVCNT_IMAGES_BASH_TEST_L0' &&
  bl64_check_export 'DEVCNT_IMAGES_BASH_TEST_L1' &&
  bl64_check_export 'DEVCNT_IMAGES_BASH_TEST_L2' &&
  bl64_check_export 'DEVCNT_IMAGES_BASH_TEST_L3' &&
  bl64_check_export 'DEVCNT_IMAGES_DEV_L0' &&
  bl64_check_export 'DEVCNT_IMAGES_SHELL_LINT_L1' &&
  bl64_check_export 'DEVCNT_IMAGES_TERRAFORM_TEST_L3' &&
  bl64_check_export 'DEVCNT_IMAGES_TOOLBOX_L1' &&
  bl64_check_export 'DEVCNT_IMAGES_TOOLBOX_L2' &&
  bl64_check_export 'DEVCNT_IMAGES_TOOLBOX_L0' ||
  exit $?

case "$dev_cnt_build_target" in
'all')
  dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_TOOLBOX_L0" 'Publish toolbox containers - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_TOOLBOX_L1" 'Publish toolbox containers - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_TOOLBOX_L2" 'Publish toolbox containers - level 2' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_BASH_TEST_L0" 'Publish bash-test containers - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_BASH_TEST_L1" 'Publish bash-test containers - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_BASH_TEST_L2" 'Publish bash-test containers - level 2' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_BASH_TEST_L3" 'Publish bash-test containers - level 3' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_SHELL_LINT_L1" 'Publish shell-lint - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_ANSIBLE_L1" 'Publish ansible-test containers - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_TERRAFORM_TEST_L3" 'Publish terraform-test containers - level 3'
  ;;
'toolbox')
  dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_TOOLBOX_L0" 'Publish toolbox containers - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_TOOLBOX_L1" 'Publish toolbox containers - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_TOOLBOX_L2" 'Publish toolbox containers - level 2'
  ;;
'bash_test')
  dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_BASH_TEST_L0" 'Publish bash-test containers - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_BASH_TEST_L1" 'Publish bash-test containers - level 1' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_BASH_TEST_L2" 'Publish bash-test containers - level 2' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_BASH_TEST_L3" 'Publish bash-test containers - level 3'
  ;;
'ansible_test')
  dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_ANSIBLE_L1" 'Publish ansible-test containers - level 1'
  ;;
'shell_lint')
  dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_SHELL_LINT_L1" 'Publish shell-lint - level 1'
  ;;
'terraform_test')
  dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_TERRAFORM_TEST_L3" 'Publish terraform-test containers - level 3'
  ;;
'dev')
  dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_DEV_L0" 'Publish dev - level 0' &&
    dev_cnt_publish "$dev_cnt_build_only" "$dev_cnt_delete_first" "$DEVCNT_IMAGES_DEV_L1" 'Publish dev - level 1'
  ;;
*) bl64_check_alert_parameter_invalid 'build_target' 'not one of: [all|toolbox|bash_test|ansible_test|shell_lint|terraform_test|dev]' ;;
esac
