#
# Imports
#

# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=lib/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-ui.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1

#
# Functions
#

function dev_profile_remove() {
  bl64_dbg_app_show_function
  bl64_msg_show_task "remove profile directories (${DEV_PROFILE})"
  bl64_ui_ask_confirmation 'Warning: the operation will remove all profile directories. If not tracked by GIT, they will be permanently lost. Confirm operation? Type:' 'YES' &&
    bl64_fs_path_remove \
      "$DEV_PATH_PROF_BUILD" \
      "$DEV_PATH_PROF_ETC" \
      "$DEV_PATH_PROF_LOGS" \
      "$DEV_PATH_PROF_TMP" \
      "$DEV_PATH_PROF_VAR" \
      "$DEV_PATH_PROF_VAULT"
}

function dev_profile_initialize() {
  bl64_dbg_app_show_function
  bl64_check_export 'DEV_PROFILE'
}

#
# Main
#

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start 'dev-profile-remove'
dev_profile_initialize &&
  dev_profile_remove
bl64_msg_show_batch_finish $? 'dev-profile-remove'
