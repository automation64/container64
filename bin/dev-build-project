# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=bin
source ./bin/dev-env-container &&
  source ./bin/dev-env-cosign || exit 1
# shellcheck source-path=lib/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1

declare MY_TARGET="${1:-}"
declare MY_PUBLISH="${2:-${BL64_VAR_OFF}}"
declare MY_RESET="${3:-${BL64_VAR_OFF}}"

# Build / Project / Parameters
export CNTBUILD_REGISTRY="$DEV_AUTH_CONTAINER_REGISTRY"
export CNTBUILD_COSIGN_BIN="$DEV_LIB_COSIGN_BIN"

function my_build() {
  bl64_dbg_app_show_function
  local container_name=''
  local image_list="${DEV_BUILD_PROJECT_LIST_PREFIX}${MY_TARGET}"
  local -i pause=5

  bl64_msg_show_phase "processing container list (${image_list})"
  # shellcheck disable=SC2086
  for container_name in ${!image_list}; do
    "$DEV_LIB_PROJECT_BIN" -b -c "$container_name" &&
      sleep $pause ||
      return $?
    if bl64_lib_flag_is_enabled "$MY_PUBLISH"; then
      if bl64_lib_flag_is_enabled "$MY_RESET"; then
        "$DEV_LIB_PROJECT_BIN" -x -c "$container_name"
      fi
      "$DEV_LIB_PROJECT_BIN" -u -c "$container_name" &&
        sleep $pause ||
        return $?
    fi
  done
}

function my_initialize() {
  bl64_dbg_app_show_function
  bl64_msg_show_about
  bl64_check_parameter 'MY_TARGET' ||
    return $?
  if [[ ! -v "${DEV_BUILD_PROJECT_LIST_PREFIX}${MY_TARGET}" ]]; then
    bl64_msg_show_error "invalid build target. Container list not found (${MY_TARGET} -> ${DEV_BUILD_PROJECT_LIST_PREFIX}${MY_TARGET})"
    return 1
  fi
  bl64_msg_show_setup "$BL64_VAR_DEFAULT" \
    'MY_TARGET' \
    'MY_PUBLISH' \
    'MY_RESET'
}

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable
bl64_lib_script_version_set '3.0.0'
bl64_msg_help_about_set 'Build containers using cntbuild'
bl64_msg_all_enable_verbose && my_initialize || exit $?

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_build
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
