#
# Imports
#

# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=/opt/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1
# shellcheck source-path=bin
source ./bin/dev-env-trivy || exit 1

#
# Functions
#

function dev_lib_download() {
  bl64_dbg_app_show_function
  INST64_TRIVY_TARGET="$DEV_LIB_TRIVY_TARGET" \
    INST64_SYSTEM_WIDE='NO' \
    INST64_CLI_PROMOTE='NO' \
    "${DEV_LIB_TRIVY_INSTALLER}"
}

function dev_lib_initialize() {
  bl64_dbg_app_show_function
  bl64_check_file "$DEV_LIB_TRIVY_INSTALLER"
}

#
# Main
#

bl64_lib_script_version_set '1.0.2'
bl64_msg_set_format "$DEV_VERBOSE" && bl64_msg_all_enable_verbose

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
dev_lib_initialize &&
  dev_lib_download
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
