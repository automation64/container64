export DEV_PROFILE
declare MY_PROFILE="${1:-}"
# shellcheck disable=2034
declare MY_VERSION='2.1.0'

function my_profile() {
  [[ -d "etc/prof/${MY_PROFILE}" ]] && return 0
  ./bin/dev-profile-create "$MY_PROFILE"
}

function my_load() {
  DEV_PROFILE="$MY_PROFILE"
  # shellcheck source=bin/dev-set
  source ./bin/dev-set ||
    { echo 'dev-init:Error: unable to load dev environment' 2>&1 && return 1; }
}

function my_initialize() {
  [[ "${BASH_SOURCE[0]}" == "${0}" ]] &&
    echo 'dev-init:Error: invalid execution method. Use the following command line to run this script: source ./bin/dev-init.' 2>&1 &&
    return 1
  [[ -z "$MY_PROFILE" ]] && 
    echo 'dev-init:Error: missing profile name.' 2>&1 &&
    return 1
  return 0
}

[[ -n "$DEV_BASH_DEBUG" ]] && set -x

my_initialize &&
  my_profile &&
  my_load &&
  unset my_initialize &&
  unset my_profile &&
  unset my_load
