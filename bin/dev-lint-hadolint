#
# Imports
#

# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=lib/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" ||
  exit 1

#
# Globals
#

# Dev / Enable debugging? Set to YES to enable
export DEV_CICD_DEBUG="${DEV_CICD_DEBUG:-}"
# Lint / Dockerfile / Configuration
export DEV_LIB_HADOLINT_CFG="${DEV_PATH_ROOT}/.hadolint.yaml"
# Lint / Dockerfile / Sources
export DEV_LINT_HADOLINT_SOURCE="${DEV_LINT_HADOLINT_SOURCE:-$DEV_PATH_SRC}"
# Lib / Dockerfile / Command
export DEV_LIB_HADOLINT_BIN="${DEV_LIB_HADOLINT_BIN:-/usr/local/bin/hadolint}"

#
# Functions
#

function dev_lint_hadolint() {
  bl64_dbg_app_show_function "$@"
  local target="$*"
  local current=''

  if [[ -z "$target" ]]; then
    target="$(bl64_fs_find_files "$DEV_LINT_HADOLINT_SOURCE" 'Dockerfile')" ||
      return $?
  fi
  for current in $target; do
    bl64_msg_show_phase "lint target: ${current}"
    "$DEV_LIB_HADOLINT_BIN" \
      --config "$DEV_LIB_HADOLINT_CFG" \
      "$current" ||
      return $?
  done
}

function dev_lint_initialize() {
  bl64_dbg_app_show_function "$@"
  local sources="$*"
  if [[ -z "$sources" ]]; then
    bl64_check_directory "$DEV_LINT_HADOLINT_SOURCE" ||
      return $?
  fi
  bl64_check_command_search_path "$DEV_LIB_HADOLINT_BIN"
}

#
# Main
#

declare dev_lint_target="${*:-}"

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable
dev_lint_initialize "$dev_lint_target" || exit $?

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start 'dev-lint-hadolint'
dev_lint_hadolint "$dev_lint_target"
bl64_msg_show_batch_finish $? 'dev-lint-hadolint'
