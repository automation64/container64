#!/usr/bin/env bash

# shellcheck source=SCRIPTDIR/devcnt-set
source bin/devcnt-set || exit $?
# shellcheck source=SCRIPTDIR/../lib/bashlib64.bash
source "$DEVCNT_LIB_BASHLIB64"

#
# Functions
#

function publish_toolbox_cnt() {
  local image_list="$1"
  local message="$2"
  local container_name=''

  bl64_msg_show_phase "$message"
  # shellcheck disable=SC2086
  for container_name in $image_list; do
    bl64_msg_show_task "Build container image: ${container_name}"
    ./cntbuild -b -c "$container_name" &&
      bl64_msg_show_task "Publish container image: ${container_name}" &&
      ./cntbuild -u -c "$container_name" ||
      return $?
  done
}

#
# Main
#

declare container_name=''

bl64_check_export 'DEVCNT_IMAGES_TOOLBOX_L0' &&
  bl64_check_export 'DEVCNT_IMAGES_BASH_TEST_L0' &&
  bl64_check_export 'DEVCNT_IMAGES_ANSIBLE_L1' &&
  bl64_check_export 'DEVCNT_IMAGES_SHELL_LINT_L1' &&
  bl64_check_export 'DEVCNT_IMAGES_TOOLBOX_L1' &&
  bl64_check_export 'DEVCNT_IMAGES_TOOLBOX_L2' &&
  bl64_check_export 'DEVCNT_IMAGES_BASH_TEST_L2' &&
  bl64_check_export 'DEVCNT_IMAGES_BASH_TEST_L3' &&
  bl64_check_export 'DEVCNT_IMAGES_TERRAFORM_TEST_L3' ||
  exit $?

publish_toolbox_cnt "$DEVCNT_IMAGES_TOOLBOX_L0" 'Publish toolbox containers - level 0' &&
  publish_toolbox_cnt "$DEVCNT_IMAGES_BASH_TEST_L0" 'Publish bash-test containers - level 0' &&
  publish_toolbox_cnt "$DEVCNT_IMAGES_ANSIBLE_L1" 'Publish ansible-test containers - level 1' &&
  publish_toolbox_cnt "$DEVCNT_IMAGES_SHELL_LINT_L1" 'Publish shell-lint - level 1' &&
  publish_toolbox_cnt "$DEVCNT_IMAGES_TOOLBOX_L1" 'Publish toolbox containers - level 1' &&
  publish_toolbox_cnt "$DEVCNT_IMAGES_TOOLBOX_L2" 'Publish toolbox containers - level 2' &&
  publish_toolbox_cnt "$DEVCNT_IMAGES_BASH_TEST_L2" 'Publish bash-test containers - level 2' &&
  publish_toolbox_cnt "$DEVCNT_IMAGES_BASH_TEST_L3" 'Publish bash-test containers - level 3' &&
  publish_toolbox_cnt "$DEVCNT_IMAGES_TERRAFORM_TEST_L3" 'Publish terraform-test containers - level 3'
