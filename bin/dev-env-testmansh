#
# Module parameters
#
# * Use .dev.env file to override values
#

# shellcheck disable=SC2154
{
  # Lint / TestmanSH / Sources
  export DEV_LINT_TESTMANSH_SOURCE="${DEV_LINT_TESTMANSH_SOURCE:-${DEV_BASE_SRC}}"
  # Test / TestmanSH / Container
  export DEV_TEST_TESTMANSH_CONTAINER="${DEV_TEST_TESTMANSH_CONTAINER:-bash-test/alpine-3-bash-test}"
  # Test / TestmanSH / Cases
  export DEV_TEST_TESTMANSH_CASES="${DEV_TEST_TESTMANSH_CASES:-${DEV_BASE_TEST}/batscore}"
}

#
# Locals
#
# * Use .local.env file or CICD variables to override values
#

# shellcheck disable=SC2154
{
  # Lib / TestmanSH / Skip installation?
  export DEV_LIB_TESTMANSH_SKIP='YES'
  # Lib / TestmanSH / Target
  export DEV_LIB_TESTMANSH_TARGET="${DEV_PATH_LIB}/tms}"
  # Lib / TestmanSH / Command
  export DEV_LIB_TESTMANSH_BIN="${DEV_LIB_TESTMANSH_BIN:-}"
  if [[ -z "$DEV_LIB_TESTMANSH_BIN" ]]; then
    DEV_LIB_TESTMANSH_BIN="$(bl64_bsh_command_locate_user 'testmansh')"
    if [[ -z "$DEV_LIB_TESTMANSH_BIN" ]]; then
      DEV_LIB_TESTMANSH_BIN="${DEV_LIB_TESTMANSH_TARGET}/testmansh"
      if [[ ! -x "${DEV_LIB_TESTMANSH_BIN}" ]]; then
        DEV_LIB_TESTMANSH_SKIP='NO'
      fi
    fi
  fi
}

#
# Internal variables
#
# * Shared internal variables for module tasks
#

# shellcheck disable=SC2154
{
  # Env / TestmanSH / Module environment definition version
  export DEV_ENV_TESTMANSH_VERSION='1.3.0'

  # Lib / TestmanSH / Installer
  export DEV_LIB_TESTMANSH_INSTALLER='https://raw.githubusercontent.com/automation64/testmansh/main/testmansh'
}
